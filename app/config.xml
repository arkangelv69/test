<?xml version='1.0' encoding='utf-8'?>
<widget id="com.example.iloveplatos" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>ILovePlatos</name>
    <description>
        No te pierdas el plato que te gusta.
    </description>
    <author email="david.msanchez.madrid@gmail.com" href="http://iloveplatos.com">
        David Muñoz Sánchez
    </author>
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="data:*" />
    <allow-navigation href="*" />
    <platform name="browser">
        <content src="index.html" />
    </platform>
    <platform name="android">
        <content src="index-android.html" />
        <allow-intent href="market:*" />
        <icon density="ldpi" src="res/screen/android/ldpi.png" />
        <icon density="mdpi" src="res/screen/android/mdpi.png" />
        <icon density="hdpi" src="res/screen/android/hdpi.png" />
        <icon density="xhdpi" src="res/screen/android/xhdpi.png" />
        <icon density="xxhdpi" src="res/screen/android/xxhdpi.png" />
        <splash density="land-hdpi" src="res/screen/android/splash-land-hdpi.png" />
        <splash density="land-ldpi" src="res/screen/android/splash-land-ldpi.png" />
        <splash density="land-mdpi" src="res/screen/android/splash-land-mdpi.png" />
        <splash density="land-xhdpi" src="res/screen/android/splash-land-xhdpi.png" />
        <splash density="port-hdpi" src="res/screen/android/splash-port-hdpi.png" />
        <splash density="port-ldpi" src="res/screen/android/splash-port-ldpi.png" />
        <splash density="port-mdpi" src="res/screen/android/splash-port-mdpi.png" />
        <splash density="port-xhdpi" src="res/screen/android/splash-port-xhdpi.png" />
        <preference name="ErrorUrl" value="file:///android_asset/www/index-android.html" />
        <preference name="Camera.sourceType" value="Camera.PictureSourceType" />
    </platform>
    <platform name="ios">
        <content src="index-ios.html" />
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <icon height="180" src="res/screen/ios/icon-60@3x.png" width="180" />
        <icon height="60" src="res/screen/ios/icon-60.png" width="60" />
        <icon height="120" src="res/screen/ios/icon-60@2x.png" width="120" />
        <icon height="76" src="res/screen/ios/icon-76.png" width="76" />
        <icon height="152" src="res/screen/ios/icon-76@2x.png" width="152" />
        <icon height="40" src="res/screen/ios/icon-40.png" width="40" />
        <icon height="80" src="res/screen/ios/icon-40@2x.png" width="80" />
        <icon height="57" src="res/screen/ios/icon.png" width="57" />
        <icon height="114" src="res/screen/ios/icon@2x.png" width="114" />
        <icon height="72" src="res/screen/ios/icon-72.png" width="72" />
        <icon height="144" src="res/screen/ios/icon-72@2x.png" width="144" />
        <icon height="29" src="res/screen/ios/icon-small.png" width="29" />
        <icon height="58" src="res/screen/ios/icon-small@2x.png" width="58" />
        <icon height="50" src="res/screen/ios/icon-50.png" width="50" />
        <icon height="100" src="res/screen/ios/icon-50@2x.png" width="100" />
        <splash height="480" src="res/screen/ios/iphone_portrait.png" width="320" />
        <splash height="548" src="res/screen/ios/iphone_portrait.png" width="320" />
        <splash height="960" src="res/screen/ios/iphone_retina_portrait.png" width="640" />
        <splash height="1136" src="res/screen/ios/Default-568h-Portrait@2x~iphone.png" width="640" />
        <splash height="1024" src="res/screen/ios/ipad_portrait.png" width="768" />
        <splash height="2016" src="res/screen/ios/ipad_retina_portrait.png" width="1536" />
        <splash height="320" src="res/screen/ios/iphone_landcape.png" width="480" />
        <splash height="640" src="res/screen/ios/iphone_retina_landcape.png" width="960" />
        <splash height="640" src="res/screen/ios/iphone5_retina_landcape.png" width="1136" />
        <splash height="768" src="res/screen/ios/ipad_landscape.png" width="1024" />
        <splash height="1536" src="res/screen/ios/ipad_retina_landscape.png" width="2048" />
        <splash height="1242" src="res/screen/ios/2208x1242-landscape.png" width="2208" />
        <splash height="1536" src="res/screen/ios/2048x1536-landscape.png" width="2048" />
        <splash height="2048" src="res/screen/ios/1536x2048-portrait.png" width="1536" />
        <splash height="750" src="res/screen/ios/1534x750-landscape.png" width="1534" />
        <splash height="2208" src="res/screen/ios/1242x2208-portrait.png" width="1242" />
        <splash height="768" src="res/screen/ios/1024x768-landscape.png" width="1024" />
        <splash height="1024" src="res/screen/ios/768x1024-portrait.png" width="768" />
        <splash height="1334" src="res/screen/ios/750x1334-portrait.png" width="750" />
        <preference name="Fullscreen" value="true" />
        <preference name="ErrorUrl" value="file:///android_asset/www/index-ios.html" />
    </platform>
    <feature name="InAppBrowser">
        <param name="ios-package" value="CDVInAppBrowser" />
        <param name="android-package" value="org.apache.cordova.inappbrowser.InAppBrowser" />
    </feature>
    <preference name="orientation" value="portrait" />
    <preference name="AndroidLaunchMode" value="singleTop" />
    <preference name="KeepRunning" value="true" />
    <preference name="ShowSplashScreenSpinner" value="true" />
    <preference name="loadUrlTimeoutValue" value="700000" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-device" spec="~1.1.2" />
    <plugin name="cordova-plugin-network-information" spec="~1.2.1" />
    <plugin name="cordova-plugin-x-toast" spec="https://github.com/EddyVerbruggen/Toast-PhoneGap-Plugin.git" />
    <plugin name="cordova-plugin-vibration" spec="~2.1.1" />
    <plugin name="de.appplant.cordova.plugin.local-notification" spec="https://github.com/katzer/cordova-plugin-local-notifications.git" />
    <plugin name="cordova-plugin-media" spec="~2.3.0" />
    <plugin name="cordova-plugin-camera" spec="~2.2.0" />
    <plugin name="cordova-plugin-media-capture" spec="~1.3.0" />
    <plugin name="cordova-plugin-image-picker" spec="~1.1.1" />
    <plugin name="cordova-plugin-screen-orientation" spec="~1.4.2" />
    <plugin name="cordova-plugin-inappbrowser" spec="~1.2.1" />
    <plugin name="cordova-plugin-splashscreen" spec="~4.0.0" />
    <plugin name="cordova-plugin-geolocation" spec="~2.4.0" />
</widget>
